{
  "name": "drizzle-run",
  "version": "0.16.0",
  "private": true,
  "type": "module",
  "license": "AGPL-3.0-only",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "NODE_ENV=production remix vite:build",
    "build:registry": "tsx app/registry/build.ts && npm run registry:validate:presets",
    "registry:validate:presets": "vitest run app/registry/presets.test.ts --teardownTimeout=500",
    "dev": "npm run build:registry && vite --host --force",
    "start": "NODE_ENV=production node ./build/server/index.js",
    "start:local": "NODE_ENV=production dotenv -e .env -- node ./build/server/index.js",
    "start:local:prod": "dotenv -e .env.production -- node ./build/server/index.js",
    "db:server:migration:generate": "drizzle-kit generate --config=drizzle.server.config.ts",
    "db:server:migration:generate:custom": "drizzle-kit generate --custom --config=drizzle.server.config.ts",
    "db:server:migration:deploy": "dotenv -e .env -- drizzle-kit migrate --config=drizzle.server.config.ts",
    "db:server:up": "drizzle-kit up --config=drizzle.server.config.ts",
    "db:server:drop": "drizzle-kit drop --config=drizzle.server.config.ts",
    "db:client:up": "drizzle-kit up --config=drizzle.client.config.ts",
    "db:client:migration:generate": "drizzle-kit generate --config=drizzle.client.config.ts",
    "db:client:migration:generate:custom": "drizzle-kit generate --custom --config=drizzle.client.config.ts",
    "db:client:migration:export": "tsx app/database/scripts/export-local-db-migrations.ts",
    "db:migration:generate": "npm run db:server:migration:generate && npm run db:client:migration:generate && npm run db:client:migration:export",
    "prod:db:server:migration:deploy": "dotenv -e .env.production -- drizzle-kit migrate --config=drizzle.server.config.ts",
    "prod:deploy": "fly deploy -c fly.toml --remote-only",
    "start:docker": "run-s docker:*",
    "docker:build": "docker build -t drizzle-run .",
    "docker:run": "docker run -d -p 3000:3000 --env-file .env --env-file .env.supabase drizzle-run",
    "lint": "eslint --ignore-path ../../.gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc",
    "add:icon": "sly add"
  },
  "dependencies": {
    "@conform-to/react": "^1.1.3",
    "@conform-to/zod": "^1.1.3",
    "@drizzle-lab/api": "*",
    "@drizzle-lab/visualizer": "*",
    "@electric-sql/pglite": "^0.2.3",
    "@electric-sql/pglite-v1": "npm:@electric-sql/pglite@0.1.5",
    "@epic-web/cachified": "^5.2.0",
    "@libsql/client": "^0.14.0",
    "@libsql/client-wasm": "^0.14.0",
    "@monaco-editor/react": "^4.6.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@remix-run/serve": "^2.14.0",
    "@repo/ui": "*",
    "@statelyai/inspect": "^0.3.1",
    "@supabase/supabase-js": "^2.44.2",
    "@vercel/og": "^0.6.2",
    "@xstate/react": "^4.1.1",
    "@xstate/store": "^2.6.0",
    "drizzle-kit": "^0.28.1",
    "drizzle-orm": "^0.36.4",
    "drizzle-seed": "^0.1.1",
    "drizzle-valibot": "^0.2.0",
    "drizzle-zod": "^0.5.1",
    "isbot": "^4.1.0",
    "lru-cache": "^10.3.0",
    "next-themes": "^0.3.0",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-resizable-panels": "^2.0.22",
    "react-router-hono-server": "^0.1.0",
    "remix-utils": "^7.6.0",
    "sonner": "^1.4.41",
    "use-debounce": "^10.0.3",
    "valibot": "^0.39.0",
    "xstate": "^5.17.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@remix-run/dev": "^2.14.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@shikijs/monaco": "^1.14.1",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "dotenv-cli": "^7.4.1",
    "glob": "^10.3.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "shiki": "^1.14.1",
    "tsx": "^4.18.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
